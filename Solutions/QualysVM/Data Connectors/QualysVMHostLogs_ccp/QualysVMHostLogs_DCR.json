[
  {
    "name": "QualysVMDCR",
    "apiVersion": "2021-09-01-preview",
    "type": "Microsoft.Insights/dataCollectionRules",
    "location": "{{location}}",
    "properties": {
      "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
      "streamDeclarations": {
        "Custom-QualysVM": {
          "columns": [
            {
              "name": "HOST",
              "type": "dynamic"
            },
            {
              "name": "TimeGenerated",
              "type": "datetime"
            }
          ]
        }
      },
      "destinations": {
        "logAnalytics": [
          {
            "workspaceResourceId": "{{workspaceResourceId}}",
            "name": "clv2ws1"
          }
        ]
      },
      "dataFlows": [
        {
          "streams": [
            "Custom-QualysVM"
          ],
          "destinations": [
            "clv2ws1"
          ],
          "transformKql": "source | extend Host = parse_xml(HOST) | extend ID = tostring(Host.ID) | extend IP = tostring(Host.IP) | extend TRACKING_METHOD = tostring(Host.TRACKING_METHOD) | extend OS = tostring(Host.OS) | extend DNS = tostring(Host.DNS) | project TimeGenerated, ID, IP, TRACKING_METHOD, OS, DNS",
          "outputStream": "Custom-Qualys_HostDetectionV2_CL"
        }
      ]
    }
  }
]