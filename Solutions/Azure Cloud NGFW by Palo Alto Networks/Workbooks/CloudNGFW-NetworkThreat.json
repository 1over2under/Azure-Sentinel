        "version": "KqlItem/1.0",
        "query": "fluentbit_CL\r\n| where isnotempty(FirewallName_s)\r\n| where ident_s == 'THREAT'\r\n| extend message = parse_json(Message)\r\n| where message.sub_type =~ 'vulnerability' or message.sub_content_type =~ 'wildfire'\r\n| extend ThreatId = coalesce(\r\n                            column_ifexists(\"threat_content_name\", \"\"),\r\n                            extract(\"\\\\((.*?)\\\\)\",1,tostring(message.threat_content_name)),\r\n                            \"\"\r\n                        )\r\n| summarize Amount=count() by ThreatId, tostring(message.severity)\r\n| top 20 by Amount",
