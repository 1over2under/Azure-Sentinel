{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics workspace name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "cyble_api_key": {
      "type": "string",
      "metadata": {
        "description": "Cyble API Key for authentication"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2023-07-01",
      "name": "CybleIOCEnrichmentDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'Playbooks/IoC-Enrichment/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "cyble_api_key": {
            "value": "[parameters('cyble_api_key')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspace')]"
          }
        }
      },
      "metadata": {
            "title": "Cyble-IOC_Enrichment",
            "description": "This playbook leverages the Cyble API to enrich IP, Domain, Url & Hash indicators, found in Microsoft Sentinel incidents, with the following context: Risk Score, Confidence values, etc. The enrichment content will be posted as a comment in the Microsoft Sentinel incident",
            "prerequisites": [
              "To use the Cyble for Azure connector, you will need a valid API token from Cyble"
            ],
            "lastUpdateTime": "2025-05-08T00:00:00Z",
            "entities": [
              "ip",
              "url",
              "dnsresolution",
              "filehash"
            ],
            "tags": [
              "Enrichment"
            ],
            "releaseNotes": [
              {
                "version": "1.0",
                "title": "Cyble-IOC_Enrichment",
                "notes": [
                  "Initial version"
                ]
              }
            ]
          }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2023-07-01",
      "name": "CybleTIIngestDeployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'Playbooks/TI-Ingest/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "cyble_api_key": {
            "value": "[parameters('cyble_api_key')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "workspace": {
            "value": "[parameters('workspace')]"
          }
        }
      },
      "metadata": {
            "title": "Cyble-IOC_Enrichment",
            "description": "This playbook leverages the Cyble API to enrich IP, Domain, Url & Hash indicators, found in Microsoft Sentinel incidents, with the following context: Risk Score, Confidence values, etc. The enrichment content will be posted as a comment in the Microsoft Sentinel incident",
            "prerequisites": [
              "To use the Cyble for Azure connector, you will need a valid API token from Cyble"
            ],
            "lastUpdateTime": "2025-05-08T00:00:00Z",
            "entities": [
              "ip",
              "url",
              "dnsresolution",
              "filehash"
            ],
            "tags": [
              "Enrichment"
            ],
            "releaseNotes": [
              {
                "version": "1.0",
                "title": "Cyble-IOC_Enrichment",
                "notes": [
                  "Initial version"
                ]
              }
            ]
          }
    }
  ],
  "outputs": {}
}
