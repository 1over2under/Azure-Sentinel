[
    {
        "name": "SnowflakeDCR",
        "apiVersion": "2023-03-11",
        "type": "Microsoft.Insights/dataCollectionRules",
        "location": "{{location}}",
        "properties": {
            "dataCollectionEndpointId": "{{dataCollectionEndpointId}}",
            "streamDeclarations": {
                "Custom-SnowflakeLogin": {
                    "columns": [
                        {
                            "name": "data",
                            "type": "dynamic"
                        }
                    ]
                },
                "Custom-SnowflakeQuery": {
                    "columns": [
                        {
                            "name": "data",
                            "type": "dynamic"
                        }
                    ]
                },
                "Custom-SnowflakeDatabase": {
                    "columns": [
                        {
                            "name": "data",
                            "type": "dynamic"
                        }
                    ]
                },
                "Custom-SnowflakeUserGrant": {
                    "columns": [
                        {
                            "name": "data",
                            "type": "dynamic"
                        }
                    ]
                },
                "Custom-SnowflakeRoleGrant": {
                    "columns": [
                        {
                            "name": "data",
                            "type": "dynamic"
                        }
                    ]
                }
            },
            "destinations": {
                "logAnalytics": [
                    {
                        "workspaceResourceId": "{{workspaceResourceId}}",
                        "name": "clv2ws1"
                    }
                ]
            },
            "dataFlows": [
                {
                    "streams": [
                        "Custom-SnowflakeLogin"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend Data = tostring(data), TimeGenerated = now() | project TimeGenerated, Data",
                    "outputStream": "Custom-SnowflakeLogin_CL"
                },
                {
                    "streams": [
                        "Custom-SnowflakeQuery"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend Data = tostring(data), TimeGenerated = now() | project TimeGenerated, Data",
                    "outputStream": "Custom-SnowflakeQuery_CL"
                },
                {
                    "streams": [
                        "Custom-SnowflakeDatabase"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend Data = tostring(data), TimeGenerated = now() | project TimeGenerated, Data",
                    "outputStream": "Custom-SnowflakeDatabase_CL"
                },
                {
                    "streams": [
                        "Custom-SnowflakeUserGrant"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend Data = tostring(data), TimeGenerated = now() | project TimeGenerated, Data",
                    "outputStream": "Custom-SnowflakeUserGrant_CL"
                },
                {
                    "streams": [
                        "Custom-SnowflakeRoleGrant"
                    ],
                    "destinations": [
                        "clv2ws1"
                    ],
                    "transformKql": "source | extend Data = tostring(data), TimeGenerated = now() | project TimeGenerated, Data",
                    "outputStream": "Custom-SnowflakeRoleGrant_CL"
                }
            ]
        }
    }
]